SELECT
    o.Date AS order_date,
    pc.CategoryName AS category_name,
    p.ProdName AS product_name,
    p.Price AS product_price,
    o.Quantity AS order_qty,
    (p.Price * o.Quantity) AS total_sales, -- Kolom Perhitungan
    c.CustomerEmail AS cust_email,
    c.CustomerCity AS cust_city
FROM
    `BankMuamalatData.Orders` o
INNER JOIN
    `BankMuamalatData.Cust` c ON o.CustomerID = c.CustomerID
INNER JOIN
    `BankMuamalatData.Products` p ON o.ProdNumber = p.ProdNumber
INNER JOIN
    `BankMuamalatData.ProdCategory` pc ON p.Category = pc.CategoryID
ORDER BY
    order_date ASC,
    order_qty ASC;
